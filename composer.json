{
    "name": "tpayne/behat-mail-extension",
    "description": "An extension for testing emails with Behat",
    "require": {
        "guzzlehttp/guzzle": "^6.2",
        "behat/behat": "^3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "tPayne\\BehatMailExtension\\": "src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Payne",
            "email": "tyler43636@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "test": "phpspec run",
        "lint": "phpcs src --standard=PSR2",
        "fix": "phpcbf src --standard=PSR2"
    }
}
